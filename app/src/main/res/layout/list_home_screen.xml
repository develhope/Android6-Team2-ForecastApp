<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="191dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeScreenFragment"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_home_screen_list"
            android:layout_width="342dp"
            android:layout_height="155dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:padding="18dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#66FFFFFF"
            android:elevation="8dp" >

            <LinearLayout
                android:layout_width="342dp"
                android:layout_height="155dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="18dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_day_of_week_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:lineHeight="29.05dp"
                            tools:text="@string/oggi"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="600"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_day_of_month_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="Inter"
                            android:lineHeight="18.15dp"
                            tools:text="@string/_10_09"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_min_num_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:lineHeight="24.2dp"
                            tools:text="@string/_22"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="600"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_min_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="Inter"
                            android:lineHeight="18.15dp"
                            android:text="@string/min"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_max_num_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:lineHeight="24.2dp"
                            tools:text="@string/_31"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="600"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_max_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="Inter"
                            android:lineHeight="16.94dp"
                            android:text="@string/max"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="400"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="14dp">

                    <LinearLayout
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_sky_list"
                            android:layout_width="46dp"
                            android:layout_height="47.4dp"
                            android:src="@drawable/sun" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_precip_num_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:lineHeight="24.2dp"
                            tools:text="@string/_0_mm"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="600"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_precip_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="Inter"
                            android:lineHeight="18.15dp"
                            android:text="@string/precip"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_wind_num_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter"
                            android:lineHeight="24.2dp"
                            tools:text="@string/_6kmh"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="600"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_wind_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="Inter"
                            android:lineHeight="18.15dp"
                            android:text="@string/vento"
                            android:textColor="#FFFFFF"
                            android:textFontWeight="400"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>