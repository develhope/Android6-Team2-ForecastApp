<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/today_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sanseriffic"
        android:textColor="@color/soft_yellow"
        android:textSize="@dimen/textSize_title_todayScreen_small"
        android:letterSpacing="@dimen/letter_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Palermo, Sicilia" />

    <TextView
        android:id="@+id/today_subtitle_short_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sanseriffic"
        android:text="@string/today_title_text"
        android:textColor="@color/soft_yellow"
        android:textSize="@dimen/textSize_title_todayScreen_big"
        android:letterSpacing="@dimen/letter_space"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/today_location_tv" />

    <TextView
        android:id="@+id/today_subtitle_long_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sanseriffic"
        android:textColor="@color/soft_yellow"
        android:textSize="@dimen/textSize_title_todayScreen_small"
        android:letterSpacing="@dimen/letter_space"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/today_subtitle_short_tv"
        app:layout_constraintTop_toBottomOf="@id/today_subtitle_short_tv"
        tools:text="Domenica 10 Settembre" />

    <TextView
        android:id="@+id/today_condition_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sanseriffic"
        android:textColor="@color/soft_yellow"
        android:textSize="@dimen/textSize_title_todayScreen_small"
        android:letterSpacing="@dimen/letter_space"
        tools:text="Sereno"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/today_subtitle_long_tv"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>